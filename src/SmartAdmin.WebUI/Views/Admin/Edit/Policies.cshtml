@model SmartAdmin.WebUI.Models.Enrollment.EnrollmentUpdateModel
@{
    ViewData["Title"] = "Policies";
    ViewData["PageName"] = "Policies Agreement";
    ViewData["Heading"] = "<i class='subheader-icon fal fa-edit'></i> Ruya Information and Policies Agreement";
    ViewData["Category1"] = "Form Stuff";
    ViewData["PageDescription"] = "";
    ViewData["error"] = ViewBag.Errors;
}
<form method="post" enctype="multipart/form-data" class="was-validated">
    <input type="hidden" asp-for="Id" />
    <div class="row">
        <div class="col-xl-12">
            <div id="panel-1" class="panel">
                <div class="panel-hdr">
                    <h2>
                        Enrollment
                    </h2>
                    <div class="panel-toolbar">
                        <button class="btn btn-panel" data-action="panel-collapse" data-toggle="tooltip" data-offset="0,10" data-original-title="Collapse"></button>
                        <button class="btn btn-panel" data-action="panel-fullscreen" data-toggle="tooltip" data-offset="0,10" data-original-title="Fullscreen"></button>
                        <button class="btn btn-panel" data-action="panel-close" data-toggle="tooltip" data-offset="0,10" data-original-title="Close"></button>
                    </div>
                </div>
                <div class="panel-container show">
                    <div class="panel-content">

                        <div class="row">
                            <div class="col-xl-12 mb-3">
                                <h1>Policies Agreement</h1>
                                <p style="font-size: 16px">
                                    Please review the following policies on our website.
                                    <br />
                                    Registrants must agree to the terms and conditions before completing the registration process
                                </p>
                                <ul style="font-size:16px">
                                    @foreach(var item in ViewBag.RuyaDocuments){
                                        <li><a href="@("assets/RuyaDocuments/"+item.path)" target="_blank">@item.displayNameToUser</a></li>
                                    }
                                   
                                </ul>
                            </div>
                            <div class="col-xl-12 mb-3">
                                <div class="custom-control custom-checkbox">
                                    <input type="checkbox" class="custom-control-input" id="defaultUnchecked" asp-for="enrollment">
                                    <label class="custom-control-label" for="defaultUnchecked">I have read, understood and agreed on all the provisions mentioned in the school policies and I pledge to abide all of them</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-12 mb-3 pl-4">
            <button type="submit" asp-page-handler="Enrollment" asp-route-dir="submit" class="btn btn-success waves-effect waves-themed mr-3">Submit</button>
            <button type="submit" asp-page-handler="Enrollment" asp-route-dir="next" id="next-up" class="btn btn-primary waves-effect waves-themed mr-3">Next</button>
        </div>
    </div>

</form>


@section ScriptsBlock {
<script type="text/javascript">
    var example_gridsize = $("#example-gridsize");
    $("#gridrange").on("input change", function () {
        //do something
        example_gridsize.attr("placeholder", ".col-" + $(this).val());
        example_gridsize.parent().removeClass().addClass("col-" + $(this).val())
        console.log("col-" + $(this).val());
    });
</script>
}
